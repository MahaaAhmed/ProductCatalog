@model IEnumerable<UserViewModel> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Employee </a>

@*Search*@
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchInp" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(E => E.Id)</th>
        <th>@Html.DisplayNameFor(E => E.FName)</th>
        <th>@Html.DisplayNameFor(E => E.LName)</th>
        <th>@Html.DisplayNameFor(E => E.Email)</th>
        <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
        <th>@Html.DisplayNameFor(E => E.Roles)</th>

       
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>

                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(" ",user.Roles)</td>
                    <partial name="_UserButtonsPartial" model="@user.Id" />
                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


else
{
    <div class="mt-4 alert alert-warning">
        <h3>there Is No Users</h3>
    </div>
}

