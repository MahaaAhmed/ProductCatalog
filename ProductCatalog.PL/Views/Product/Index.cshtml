@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>
<br />
<br />
<br />

<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="Search" placeholder="Search Product By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />

        </div>
    </form>

</div>
@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Price)</th>
              @*   <th>@Html.DisplayNameFor(e => e.CategoryName)</th> *@
              
                <th>Details </th>
               
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var product in Model)
            {
                <tr>

                    <td>@product.Name</td>
                    <td>@product.Price</td>
                 @*    <td>@product.CategoryName</td> *@

@*                     <partial name="_ButtonsPartial" model="@product.Id" />
 *@
                    <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@product.Id"> <i class="fas fa-eye"></i>Details</a></td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Products Found !!</h2>
    </div>
}