
@model ProductViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="my-5 w-75">Product Details</h1>

<ul class="nav nav-tabs" id="employeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
           
          
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Price"></label>
                <input asp-for="Price" class="form-control" readonly />
            </div>
        
        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="CreatedByUserId"></label>
            <input asp-for="CreatedByUserId" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="CreationDate"></label>
            <input asp-for="CreationDate" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" readonly />
        </div>
        
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="AdminIndex" class="btn btn-outline-dark">Back To list</a>
        }
        else
        {
        <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>

        }

    </div>
</div>




