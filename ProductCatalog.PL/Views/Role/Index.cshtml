@model  IEnumerable<RoleViewModel> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role </a>

@*Search*@
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="name" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(E => E.Id)</th>
        <th>@Html.DisplayNameFor(E => E.RoleName)</th>

        

       
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>

                    <td>@role.Id</td>
                    <td>@role.RoleName</td>

                    <partial name="_UserButtonsPartial" model="@role.Id" />
                    <td>
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


else
{
    <div class="mt-4 alert alert-warning">
        <h3>there Is No Roles</h3>
    </div>
}

